# Apache Configuration for Motoboy System

Options -Indexes
RewriteEngine On

# Redirect to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Handle 404 errors
ErrorDocument 404 /404.php

# Prevent access to sensitive files
<FilesMatch "\.(ini|log|sql|bak|sh|htaccess)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>